<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IndexActivity"
    android:background="@color/black">
     <com.lin.voltrfremoteadaptorandroid.module.TopBarModule
         android:id="@+id/index_top_bar"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         tools:ignore="InvalidId,MissingConstraints" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/index_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/index_top_bar"
        android:padding="5dp"/>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/index_viewPager"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/index_tab_layout"
        />


</androidx.constraintlayout.widget.ConstraintLayout>