<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<data></data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <com.lin.voltrfremoteadaptorandroid.view.TopBarModule
        android:id="@+id/remote_top_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_remote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remote_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints">
            <com.lin.voltrfremoteadaptorandroid.view.AllOnOffModule
                android:id="@+id/remote_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                tools:ignore="MissingConstraints"
                />

            <com.lin.voltrfremoteadaptorandroid.view.ColorPickerView
                android:id="@+id/remote_color_picker"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintTop_toBottomOf="@id/remote_top"/>
            <ImageView
                android:id="@+id/remote_indicator"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_remote_light_off"
                app:layout_constraintLeft_toLeftOf="@id/remote_color_picker"
                app:layout_constraintRight_toRightOf="@id/remote_color_picker"
                app:layout_constraintTop_toTopOf="@id/remote_color_picker"
                app:layout_constraintBottom_toBottomOf="@id/remote_color_picker"/>

<!--            颜色格子-->
            <GridLayout
                android:id="@+id/remote_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/remote_color_picker"
                android:columnCount="4"
                android:rowCount="1"
                >

                <TextView
                    android:id="@+id/remote_red"
                    android:text="RED"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_remote_color"
                    />
                <TextView
                    android:id="@+id/remote_green"
                    android:text="GREEN"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_remote_color"
                    />
                <TextView
                    android:id="@+id/remote_blue"
                    android:text="BLUE"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_remote_color"
                    />
                <TextView
                    android:id="@+id/remote_last"
                    android:text="LAST"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_remote_color"
                    />
            </GridLayout>


<!--            按钮格子-->
            <GridLayout
                android:id="@+id/remote_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/remote_color"
                android:layout_marginTop="20dp"
                android:columnCount="4"
                android:layout_marginVertical="20dp"
                android:rowCount="3"
                android:useDefaultMargins="true">
<!--                第一行-->
                <TextView
                    android:id="@+id/remote_luminance_25"
                    android:text="@string/luminance_25"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textSize="16sp"
                    android:background="@drawable/btn_remote_item"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/remote_luminance_50"
                    android:text="@string/luminance_50"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:textSize="16sp"
                    android:background="@drawable/btn_remote_item"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/remote_luminance_75"
                    android:text="@string/luminance_75"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:textSize="16sp"
                    android:background="@drawable/btn_remote_item"
                    android:layout_gravity="center"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/remote_luminance_100"
                    android:text="@string/luminance_100"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:textSize="16sp"
                    android:background="@drawable/btn_remote_item"
                    android:layout_gravity="center"
                    android:gravity="center" />

<!--                第二行-->
                <TextView
                    android:id="@+id/remote_temperature_2200"
                    android:text="@string/temperature_2200"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textSize="16sp"
                    android:background="@drawable/btn_remote_item"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/remote_temperature_2700"
                    android:text="@string/temperature_2700"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:textSize="16sp"
                    android:background="@drawable/btn_remote_item"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/remote_temperature_3000"
                    android:text="@string/temperature_3000"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:textSize="16sp"
                    android:background="@drawable/btn_remote_item"
                    android:layout_gravity="center"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/remote_temperature_4000"
                    android:text="@string/temperature_4000"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:textSize="16sp"
                    android:background="@drawable/btn_remote_item"
                    android:layout_gravity="center"
                    android:gravity="center" />

<!--                第三行-->
                <TextView
                    android:id="@+id/remote_other_flash"
                    android:text="@string/remote_flash"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_remote_color"/>
                <TextView
                    android:id="@+id/remote_other_strobe"
                    android:text="@string/remote_strobe"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_remote_color"/>
                <TextView
                    android:id="@+id/remote_other_fade"
                    android:text="@string/remote_fade"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_remote_color"/>
                <TextView
                    android:id="@+id/remote_other_smooth"
                    android:text="@string/remote_smooth"
                    android:textColor="@color/text"
                    android:layout_columnWeight="1"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_remote_color"/>
            </GridLayout>

<!--            分割线-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/remote_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/remote_btn"
                >
                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="0.5dp"
                    android:src="@color/remote_divider"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zone"
                    android:textColor="@color/remote_divider"
                    android:textSize="22sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="0.5dp"
                    android:src="@color/remote_divider"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:useDefaultMargins="true"
                app:layout_constraintTop_toBottomOf="@id/remote_divider"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/remote_zone_1"
                    android:text="1"
                    android:textColor="@color/black"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textSize="20sp"
                    android:background="@drawable/btn_remote_zone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/remote_zone_2"
                    android:text="2"
                    android:textColor="@color/black"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:textSize="20sp"
                    android:background="@drawable/btn_remote_zone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/remote_zone_3"
                    android:text="3"
                    android:textColor="@color/black"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:textSize="20sp"
                    android:background="@drawable/btn_remote_zone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/remote_zone_4"
                    android:text="4"
                    android:textColor="@color/black"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textSize="20sp"
                    android:background="@drawable/btn_remote_zone"
                    android:layout_gravity="center"
                    android:gravity="center"

                    />
                <TextView
                    android:id="@+id/remote_zone_5"
                    android:text="5"
                    android:textColor="@color/black"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:textSize="20sp"
                    android:background="@drawable/btn_remote_zone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/remote_zone_6"
                    android:text="6"
                    android:textColor="@color/black"
                    android:layout_columnWeight="1"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:textSize="20sp"
                    android:background="@drawable/btn_remote_zone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </GridLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>