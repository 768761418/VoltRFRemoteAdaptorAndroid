<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <gradient
                android:startColor="#fe0000"
                android:centerColor="#f98181"
                android:endColor="#e30505"
                android:angle="270"
                android:type="linear"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f97676"
                android:centerColor="#f94b4b"
                android:endColor="#fa1010"
                android:angle="270"
                android:type="linear"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>